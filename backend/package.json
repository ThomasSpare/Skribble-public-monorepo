{
  "name": "skribble-backend",
  "version": "1.0.0",
  "description": "Skribble - Music Collaboration Platform Backend API",
  "main": "src/server-minimal.ts",
  "scripts": {
    "dev": "nodemon src/server-minimal.ts",
    "dev:debug": "nodemon --inspect src/server-minimal.ts",
    "dev:minimal": "nodemon src/server-minimal.ts",
    "build": "tsc",
    "start": "node dist/server-minimal.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "ts-node --transpile-only src/scripts/migrate.ts",
    "migrate:up": "ts-node --transpile-only src/scripts/migrate.ts up",
    "migrate:down": "ts-node --transpile-only src/scripts/migrate.ts down",
    "migrate:status": "ts-node --transpile-only src/scripts/migrate.ts status",
    "seed": "ts-node --transpile-only src/scripts/seed.ts",
    "db:reset": "npm run migrate:down && npm run migrate:up && npm run seed",
    "type-check": "tsc --noEmit",
    "clean": "if exist dist rmdir /s /q dist && if exist uploads\\audio rmdir /s /q uploads\\audio",
    "setup:dirs": "if not exist uploads mkdir uploads && if not exist uploads\\audio mkdir uploads\\audio",
    "setup": "npm run setup:dirs && npm run migrate:up",
    "setup:linux": "mkdir -p uploads/audio && npm run migrate:up",
    "migrate:s3": "ts-node src/scripts/migrate-local-to-s3.ts",
    "migrate:s3:execute": "ts-node src/scripts/migrate-local-to-s3.ts --execute",
    "migrate:s3:cleanup": "ts-node src/scripts/migrate-local-to-s3.ts --cleanup"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.835.0",
    "@aws-sdk/s3-request-presigner": "^3.835.0",
    "bcrypt": "^5.1.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "5.1.0",
    "express-validator": "^7.2.1",
    "ffmpeg-static": "^5.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "nodemailer": "^6.9.0",
    "pg": "^8.16.0",
    "rate-limiter-flexible": "^3.0.0",
    "socket.io": "^4.8.1",
    "stripe": "^14.25.0",
    "ts-node": "^10.9.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.2",
    "@types/supertest": "^2.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
